<% home_batters = game.home_batters %>

<div class="col-sm-6 col-sm-offset-3">
  <table class="table table-data text-center">
    <tbody>
    <tr>
      <td colspan="2"><%= game.home_team.upcase %></td>
      <td colspan="2" class="data-confirmed data-table-dark"><%= game.home_batters_confirmed.upcase %> LINEUP</td>
    </tr>
    </tbody>
  </table>
</div>
<div class="col-sm-12">
  <table class="table table-data text-center">
    <tbody>
    <tr class="table-data-head">
      <td>POS</td>
      <td>FD</td>
      <td>POS</td>
      <td>DK</td>
      <td>NAME</td>
      <td>BATS</td>
      <td>PA</td>
      <td>OBP</td>
      <td>wOBA</td>
      <td>ISO</td>
      <td>HARD%</td>
      <td>FB%</td>
      <td>K%</td>
      <td>HR%</td>
      <td>StCast%</td>
      <td>MwOBA</td>
    </tr>
    <% home_batters.each_with_index do |batter, bi| %>
      <tr>
        <% if current_user_subscribed? %>
          <% batter.each_with_index do |b, i| %>
            <td class="batter-data-<%= i %> <%= "dollar-data" if i == 1 or i == 3%>"><%= b %></td>
          <% end %>
        <% else %>
          <% batter.each_with_index do |b, i| %>
            <% if i < 13 %>
              <td class="batter-data-<%= i %> <%= "dollar-data" if i == 1 or i == 3%>"><%= b %></td>
            <% elsif i == 13 and bi === 0 %>
              <td class="data-prem" colspan="3" rowspan="9">
                <div style="margin-top: 60px">
                  <h3>FANTASY<strong>PHENOM</strong></h3>
                  <h4>PREMIUM DATA</h4>
                  <a href="<%= new_subscription_path %>" class="btn btn-primary">JOIN THE TEAM</a>
                  <h5>
                    Statistics Developed &<br/>
                    Organized for <strong>DFS</strong>
                  </h5>
                </div>
              </td>
            <% end %>
          <% end %>
        <% end %>
      </tr>
    <% end %>
    </tbody>
  </table>
</div>
