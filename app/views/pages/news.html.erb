<h1 align="center">Listing Articles</h1>
<div class="row">
  <div class="col-sm-12">
    <% counter = 0 %>
    <% @articles.each do |article| %>
        <% if counter === 0 %>
          <div class="col-xs-12">
            <%= render "pages/news_panel", article: article %>
        <% elsif counter < 4 %>
          <div class="col-sm-4">
            <%= render "pages/news_panel", article: article %>
        <% elsif counter == 4 || counter == 5 %>
          <div class="col-sm-6">
            <%= render "pages/news_panel", article: article %>
        <% else %>
          <div class="col-sm-4">
            <%= render "pages/news_panel", article: article %>
        <% end %>
        </div>
      <% counter += 1 %>
    <% end %>
  </div>
</div>

