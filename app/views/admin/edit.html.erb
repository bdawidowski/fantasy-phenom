 <% if @user.standings.last %>
    <% user_has_stripe = true %>
<% else %> 
    <% user_has_stripe = false %>
<% end %>

<% if user_has_stripe %>
    <% if @user.standings.last.status === "active" %>
        <% status_style = "success" %>
    <% elsif @user.standings.last.status === "canceled" %>
        <% status_style = "danger" %>
    <% elsif @user.standings.last.status === "trialing" %>
        <% status_style = "primary" %>
    <% else %>
        <% status_style = "warning" %>
    <% end %>
<% else %>
    <% status_style = "default" %>
<% end %>




<div class="row">
  <div class="text-center">
    <%= gravatar_for(@user, size: 60) %>
  </div> <!-- gravatar -->
  <h1 align="center"></h1>
  <div class="col-sm-6 col-sm-offset-3">
    <div class="panel panel-default devise-bs">
      <div class="panel-body">
        <%= form_tag("/admin/#{@user.id}", :method => :put, :id => "update-usr-form") do |f| %>
        <div class="form-group">
                <% if user_has_stripe %>
                    <button class="btn btn-<%= status_style %> btn-block" disabled><%= @user.standings.last.status.upcase %></button>
                <% else %>
                    <button class="btn btn-default btn-block" disabled>FREE</button>
                <% end %>
            </div>
          <div class="row">
            <div class="col-sm-6">
                <div class="form-group">
                    <label>Name:</label>
                    <input class="form-control" value="<%= @user.first_name + ' ' + @user.last_name %>" disabled />
                </div>
            </div>
            <div class="col-sm-6">
                <div class="form-group">
                    <label>Email:</label>
                    <input class="form-control" value="<%= @user.email %>" disabled />
                </div>
            </div>
          </div>
          <div class="row">
            <div class="col-sm-4">
              <div class="form-group">
                <label>Platform Access:</label>
                  <%= text_field_tag :subscribed, @user.subscribed, class: "form-control" %>
              </div>
            </div>
            <div class="col-sm-4">
              <div class="form-group">
                <label>Chatroom/Google Access:</label>
                  <%= text_field_tag :chatroom, @user.chatroom, class: "form-control" %>
              </div>
            </div>
            <div class="col-sm-4">
              <div class="form-group">
                <label>Contributor:</label>
                  <%= text_field_tag :contributor, @user.contributor, class: "form-control" %>
              </div>
            </div>
          </div>
            
            
            
          <%= submit_tag "UPDATE INFORMATION", class: 'btn btn-primary btn-block' %>
        <% end %>
        <br/>
        <%= link_to "BACK" , admin_index_path, class: "btn btn-default btn-block" %>
      </div>
    </div>
    
    <!--<p># t('.unhappy', default: 'Unhappy') %> # link_to t('.cancel_my_account', default: 'Cancel my account'), registration_path(resource_name), data: { confirm: t('.are_you_sure', default: "Are you sure?") }, method: :delete %>.</p>-->
    
    
  </div>
</div>
