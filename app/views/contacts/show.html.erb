<div class="row">
  <div class="col-sm-8 col-sm-offset-2">
    <div class="panel panel-default devise-bs">
      <div class="panel-body text-center">
        <% if current_user_admin? %>
        <form>
          <div class="col-sm-6">
          <div class="form-group">
            <label>NAME:</label>
            <input type="text" class="form-control" value="<%= @contact.name %>" disabled/>
          </div>
          </div>
          <div class="col-sm-6">
          <div class="form-group">
            <label>EMAIL:</label>
            <input type="email" class="form-control" value="<%= @contact.email %>" disabled/>
          </div>
          </div>
          <div class="col-sm-12">
          <div class="form-group">
            <label>MESSAGE:</label>
            <textarea rows="10" class="form-control" disabled><%= @contact.message %></textarea>
          </div>
          </div>
        </form>
          
          <h4><%= time_ago_in_words(@contact.created_at).upcase + " AGO" %></h4>
          <%= link_to 'BACK', contacts_path, class: "btn btn-primary btn-block industry-main" %>
        <% else %>
          <h1>THANK YOU FOR GETTING IN TOUCH!</h1>
          <div class="col-sm-8 col-sm-offset-2">
            <h4 style="padding: 25px">We try to respond as soon as possible, so one of our Phenoms will get back to you within a few hours.</h4>
            <%= link_to 'Back', root_path, class: "btn btn-primary btn-block industry-main" %>
          </div>
        <% end %>
        
      </div>
    </div>
  </div>
</div>

