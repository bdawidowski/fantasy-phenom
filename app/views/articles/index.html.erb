<p id="notice"><%= notice %></p>

<h1 align="center">Listing Articles</h1>
<div class="row">
  <div class="col-sm-10 col-sm-offset-1">
    <%= link_to "New Article", new_article_path, class: "btn btn-default" %>
    <table class="table">
      <thead>
        <tr>
          <th>Title</th>
          <th>Content</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <% @articles.each do |article| %>
          <tr>
            <td><%= article.title %></td>
            <td><%= article.content %></td>
            <td><%= link_to 'Show', article, class: "btn btn-default btn-xs" %>
            <%= link_to 'Edit', edit_article_path(article), class: "btn btn-default btn-xs" %>
            <%= link_to 'Destroy', article, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-default btn-xs" %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>



