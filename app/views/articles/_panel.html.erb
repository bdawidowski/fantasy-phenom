<% short_dis = article.content.gsub(/<.*?>/, "") %>



<div class="panel panel-success devise-bs">
    <div class="panel-heading">
        <%= article.title %>
    </div>
    <div class="panel-body">
        <%= truncate(short_dis, length: 30) %>
    </div>
    <% if current_user_admin? %>
        <div class="panel-footer">
            <%= link_to 'Show', article, class: "btn btn-default btn-xs" %>
            <%= link_to 'Edit', edit_article_path(article), class: "btn btn-default btn-xs" %>
            <%= link_to 'Destroy', article, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-default btn-xs" %></td>
        </div>
    <% end %>
</div>